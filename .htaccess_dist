<IfModule mod_rewrite.c>
Options +FollowSymLinks -Indexes
RewriteEngine On

# a domain is used, e.g. http://www.domain.tld/request
RewriteBase /

# server name or IP is used, e.g. http://servername/path/to/tolc/request
#RewriteBase /path/to/tolc

# root: rewrite to 'app/index.php'
# L means stop processing more rules
RewriteRule ^(/)?$ app/index.php [L]

# non existed URLs (files or directories): rewrite to 'app/index.php'
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.*)$ app/index.php

# existed URLs (files or directories) will be called normally (Options -Indexes is useful to avoid directory listing)

</IfModule>